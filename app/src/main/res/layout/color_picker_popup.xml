<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/cyrcle_text_edit"
    android:orientation="vertical"
    android:padding="10dp">

    <GridLayout
        android:id="@+id/colorGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:rowCount="1">

        <View
            android:id="@+id/colorRed"
            style="@style/LittleColorExampleStyle"
            android:background="@drawable/color_example_drawable" />

        <View
            android:id="@+id/colorGreen"
            style="@style/LittleColorExampleStyle"
            android:background="@drawable/color_example_drawable" />

        <View
            android:id="@+id/colorBlue"
            style="@style/LittleColorExampleStyle"
            android:background="@drawable/color_example_drawable" />

        <View
            android:id="@+id/colorRed1"
            style="@style/LittleColorExampleStyle"
            android:background="@drawable/color_example_drawable" />

        <View
            android:id="@+id/colorGreen1"
            style="@style/LittleColorExampleStyle"
            android:background="@drawable/color_example_drawable" />

        <View
            android:id="@+id/colorBlue1"
            style="@style/LittleColorExampleStyle"
            android:background="@drawable/color_example_drawable" />

    </GridLayout>
</LinearLayout>
