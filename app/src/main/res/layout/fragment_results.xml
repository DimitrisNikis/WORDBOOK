<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/result_title_text"
        style="@style/TitleTextViewStyle"
        android:text="Результаты теста" />

    <View
        android:id="@+id/result_dividing_line"
        style="@style/RoundedLineStyle"
        android:background="@drawable/rounded_recycler" />

    <TextView
        android:id="@+id/textCorrectAnswers"
        style="@style/ResultTextStyle"
        android:background="@drawable/circle_main_test_back" />

    <TextView
        android:id="@+id/textTotalQuestions"
        style="@style/ResultTextStyle"
        android:background="@drawable/circle_main_test_back" />

    <TextView
        android:id="@+id/textPercentage"
        style="@style/ResultTextStyle"
        android:background="@drawable/circle_main_test_back" />

</LinearLayout>
