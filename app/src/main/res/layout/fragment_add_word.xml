<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title_text"
        style="@style/TitleTextViewStyle"
        android:text="Новое слово" />

    <EditText
        android:id="@+id/word_native"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Слово на родном языке"
        android:background="#2999E5" />

    <EditText
        android:id="@+id/word_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Перевод" />

    <EditText
        android:id="@+id/example_native"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Пример на родном языке" />

    <EditText
        android:id="@+id/example_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Перевод примера" />

    <Spinner
        android:id="@+id/topic_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Выберите тему" />

    <CheckBox
        android:id="@+id/checkbox_learned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Я знаю это слово" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сохранить" />
</LinearLayout>