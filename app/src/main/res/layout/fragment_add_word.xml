<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title_text"
        style="@style/TitleTextViewStyle"
        android:text="Новое слово" />

    <View
        android:id="@+id/dividing_line"
        style="@style/RoundedLineStyle"
        android:background="@drawable/rounded_recycler" />

    <EditText
        android:id="@+id/word_native"
        style="@style/EditTextStyle"
        android:background="@drawable/cyrcle_text_edit"
        android:hint="Слово на родном языке" />


    <EditText
        android:id="@+id/word_translation"
        style="@style/EditTextStyle"
        android:background="@drawable/cyrcle_text_edit"
        android:hint="Перевод" />

    <EditText
        android:id="@+id/example_native"
        style="@style/EditTextStyle"
        android:background="@drawable/cyrcle_text_edit"
        android:hint="Пример на родном языке" />

    <EditText
        android:id="@+id/example_translation"
        style="@style/EditTextStyle"
        android:background="@drawable/cyrcle_text_edit"
        android:hint="Перевод примера" />


    <Spinner
        android:id="@+id/topic_spinner"
        android:popupBackground="@drawable/rounded_spinner_window"
        android:textSize="16sp"
        style="@style/CustomSpinnerStyle"/>

    <CheckBox
        android:id="@+id/checkbox_learned"
        style="@style/CheckBoxStyle"
        android:textSize="15sp"
        android:buttonTint="@color/blueButton"
        android:background="@drawable/cyrcle_text_edit"
        android:text="Я знаю это слово" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        style="@style/RegularButtonStyle"
        android:text="Сохранить" />

</LinearLayout>