<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_topic_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название темы"
        android:padding="16dp"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/select_color_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_topic_name"
        android:layout_marginTop="16dp"
        android:text="Выбрать цвет"/>

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_color_button"
        android:layout_marginTop="16dp"
        android:text="Сохранить"/>

    <Button
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/save_button"
        android:layout_marginTop="16dp"
        android:text="Назад"/>

    <Button
        android:id="@+id/delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_button"
        android:layout_marginTop="16dp"
        android:text="Удалить тему"
        android:backgroundTint="#FF0000"/>
</RelativeLayout>
