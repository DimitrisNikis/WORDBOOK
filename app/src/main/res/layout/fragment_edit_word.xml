<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_native_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Слово на родном языке" />

    <EditText
        android:id="@+id/edit_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Перевод" />

    <EditText
        android:id="@+id/edit_example_native"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Пример на родном языке" />

    <EditText
        android:id="@+id/edit_example_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Перевод примера" />

    <Spinner
        android:id="@+id/select_topic_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Выберите тему" />

    <CheckBox
        android:id="@+id/checkbox_learned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Я знаю это слово" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сохранить" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Удалить" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Назад" />

</LinearLayout>
